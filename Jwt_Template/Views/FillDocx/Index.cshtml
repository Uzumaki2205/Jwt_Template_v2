@model Jwt_Template.Models.tblFileDetails
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.Raw(TempData["msg"])
<div>
    @using (Html.BeginForm("Generate", "FillDocx", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        <div class="row">
            <div class="col-md-10">
                <h2>File Upload</h2>
                <hr />
                <div class="form-group">
                    <label class="col-md-2 control-label">Select Template</label>
                    @Html.DropDownList("nameTemplate", new SelectList(Model.FileList.Select(p => p.FILENAME)), "-- Select Template --")
                </div>
                <hr />

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <label class="col-md-2 control-label">Upload Json</label>
                    <div class="col-md-10">
                        <input type="file" id="jsonName" name="jsonName" class="form-control" required="required"><br />
                    </div>
                </div>

                <hr />

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Generate" class="btn btn-info" />
                    </div>
                </div>
            </div>
        </div>
    }
</div>
